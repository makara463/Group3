@{
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml"; // Use your existing admin layout
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Library Reports</h2>

    <!-- Grid Cards for Reports -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <!-- Book Report Card -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-book"></i> Book Report
                </div>
                <div class="card-body">
                    <p class="card-text">View detailed information about books in the library, including availability and issuance history.</p>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-primary w-100">View Report</a>
                </div>
            </div>
        </div>

        <!-- User Report Card -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-users"></i> User Report
                </div>
                <div class="card-body">
                    <p class="card-text">View details about library users, including their borrowing history and penalties.</p>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-success w-100">View Report</a>
                </div>
            </div>
        </div>

        <!-- Penalty Report Card -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <i class="fas fa-exclamation-triangle"></i> Penalty Report
                </div>
                <div class="card-body">
                    <p class="card-text">View penalties incurred by users due to late returns or damages.</p>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-danger w-100">View Report</a>
                </div>
            </div>
        </div>

        <!-- Attendance Report Card -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-calendar-check"></i> Attendance Report
                </div>
                <div class="card-body">
                    <p class="card-text">View attendance records of students or staff in the library.</p>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-info w-100">View Report</a>
                </div>
            </div>
        </div>

        <!-- Publication Report Card -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <i class="fas fa-newspaper"></i> Publication Report
                </div>
                <div class="card-body">
                    <p class="card-text">View details about publications like journals, magazines, and newspapers.</p>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-secondary w-100">View Report</a>
                </div>
            </div>
        </div>

        <!-- Issued Books Report Card -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-dark text-white">
                    <i class="fas fa-list"></i> Issued Books Report
                </div>
                <div class="card-body">
                    <p class="card-text">View a list of currently issued books and their return status.</p>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-dark w-100">View Report</a>
                </div>
            </div>
        </div>
    </div>
</div>
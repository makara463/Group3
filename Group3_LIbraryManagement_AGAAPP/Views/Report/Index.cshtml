@model dynamic

@{
    ViewData["Title"] = "Library System Report";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="container-fluid mt-5">
    <!-- Header Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-8 text-center">
            <h1 class="display-4 fw-bold">Library System Report</h1>
            <p class="lead text-muted">Comprehensive overview of library statistics and performance metrics.</p>
        </div>
    </div>

    <!-- Export Buttons -->
    <div class="row justify-content-end mb-4">
        <div class="col-auto">
            <a href="/Report/ExportToExcel" class="btn btn-success me-2 shadow-sm">
                <i class="fas fa-file-excel me-2"></i> Export to Excel
            </a>
            <a href="/Report/ExportToPdf" class="btn btn-danger shadow-sm">
                <i class="fas fa-file-pdf me-2"></i> Export to PDF
            </a>
        </div>
    </div>

    <!-- Report Cards -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-primary h-100">
                <div class="card-body d-flex flex-column align-items-center">
                    <h5 class="card-title text-primary fw-bold">Total Books</h5>
                    <p class="card-text display-4 text-primary">
                        <a asp-controller="Books" asp-action="Index" class="text-decoration-none text-primary">@Model.BookCount</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success h-100">
                <div class="card-body d-flex flex-column align-items-center">
                    <h5 class="card-title text-success fw-bold">Total Students</h5>
                    <p class="card-text display-4 text-success">
                        <a asp-controller="Students" asp-action="Index" class="text-decoration-none text-success">@Model.StudentCount</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-info h-100">
                <div class="card-body d-flex flex-column align-items-center">
                    <h5 class="card-title text-info fw-bold">Total Issues</h5>
                    <p class="card-text display-4 text-info">
                        <a asp-controller="Issues" asp-action="Index" class="text-decoration-none text-success"> @Model.IssueCount</a>
                      </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning h-100">
                <div class="card-body d-flex flex-column align-items-center">
                    <h5 class="card-title text-warning fw-bold">Not Return</h5>
                    <p class="card-text display-4 text-warning">
                        <a asp-controller="Issues" asp-action="Index" class="text-decoration-none text-success">@Model.NotIssuedCount</a> 
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-danger h-100">
                <div class="card-body d-flex flex-column align-items-center">
                    <h5 class="card-title text-danger fw-bold">Unpaid Penalties</h5>
                    <p class="card-text display-4 text-danger">
                        <a asp-controller="Penalties" asp-action="Index" class="text-decoration-none text-success">@Model.UnpaidPenalties</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart Section -->
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h3 class="mb-0 fw-bold">Visual Representation</h3>
                </div>
                <div class="card-body">
                    <canvas id="reportChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Data for the chart
    const data = {
        labels: ['Books', 'Students', 'Issues', 'Not Issued', 'Unpaid Penalties'],
        datasets: [{
            label: 'Counts',
            data: [@Model.BookCount, @Model.StudentCount, @Model.IssueCount, @Model.NotIssuedCount, @Model.UnpaidPenalties],
            backgroundColor: [
                'rgba(255, 99, 132, 0.6)',   // Red
                'rgba(54, 162, 235, 0.6)',   // Blue
                'rgba(75, 192, 192, 0.6)',   // Cyan
                'rgba(255, 206, 86, 0.6)',   // Yellow
                'rgba(153, 102, 255, 0.6)'   // Purple
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(153, 102, 255, 1)'
            ],
            borderWidth: 1
        }]
    };

    // Chart configuration
    const config = {
        type: 'bar',
        data: data,
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Library Statistics Overview',
                    font: {
                        size: 16,
                        weight: 'bold'
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        font: {
                            size: 12
                        }
                    }
                },
                x: {
                    ticks: {
                        font: {
                            size: 12
                        }
                    }
                }
            }
        }
    };

    // Render the chart
    const reportChart = new Chart(
        document.getElementById('reportChart'),
        config
    );
</script>